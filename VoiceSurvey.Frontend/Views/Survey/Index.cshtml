<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SurveyApp - Respond to Survey</title>
    <link rel="stylesheet" href="~/css/survey.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Top Navbar -->
    <nav class="top-nav">
        <div class="nav-left">
            <a href="#" class="logo">SurveyApp</a>
        </div>
        <div class="nav-right">
            <a href="#" class="back-btn" onclick="goBack()">Back to Surveys</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="survey-container">
        <!-- Intro Section -->
        <section id="intro-section" class="section active">
            <h1 id="survey-title">Survey Title</h1>
            <div class="intro-card">
                <h2>About This Survey</h2>
                <p id="survey-description">This is a sample survey description. The creator has provided this to give you context about what this survey is about.</p>
                <button class="next-btn" onclick="showSurvey()">Next</button>
            </div>
        </section>

        <!-- Survey Questions Section -->
        <section id="survey-section" class="section">
            <h1 id="survey-title-questions">Survey Title</h1>
            <form id="survey-response-form" onsubmit="submitResponse(event)">
                <div id="questions-container">
                    <!-- Questions will be dynamically populated here -->
                </div>
                <button type="submit" class="submit-btn">Submit Responses</button>
            </form>
        </section>
    </div>

    <!-- Toaster Container -->
    <div class="toaster-container" id="toaster-container"></div>

    <script src="~/js/survey.js"></script>
</body>
</html>