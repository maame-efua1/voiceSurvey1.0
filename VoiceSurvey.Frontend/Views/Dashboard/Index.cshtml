

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SurveyApp - Creator Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Top Navbar -->
    <nav class="top-nav">
        <div class="nav-left">
            <a href="#" class="logo">SurveyApp</a>
        </div>
        <div class="nav-right">
            <div class="account-dropdown">
                <span class="account-name" onclick="toggleAccountDropdown()">John Doe <i class="fas fa-caret-down"></i></span>
                <div class="dropdown-menu" id="account-dropdown">
                    <a href="#" onclick="showSection('surveys')">Surveys</a>
                    <a href="#" onclick="showSection('account')">Account</a>
                    <a href="#">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="dashboard-content">
        <!-- Surveys Section (Default) -->
        <section id="surveys" class="content-section active">
            <h1>Manage Surveys</h1>
            <button class="create-btn" onclick="createSurvey()">Create New Survey</button>
            <div class="surveys-grid">
                <div class="survey-card">
                    <h2>Employee Satisfaction</h2>
                    <p><strong>Status:</strong> Active</p>
                    <p><strong>Responses:</strong> 15</p>
                    <p><strong>Created:</strong> Mar 18, 2025</p>
                    <div class="survey-actions">
                        <button class="action-btn view-btn" onclick="viewSurvey('employee-satisfaction')">View Responses</button>
                        <button class="action-btn edit-btn" onclick="editSurvey('employee-satisfaction')">Edit</button>
                        <button class="action-btn delete-btn" onclick="deleteSurvey('employee-satisfaction')">Delete</button>
                    </div>
                </div>
                <div class="survey-card">
                    <h2>Market Research</h2>
                    <p><strong>Status:</strong> Draft</p>
                    <p><strong>Responses:</strong> 0</p>
                    <p><strong>Created:</strong> Mar 20, 2025</p>
                    <div class="survey-actions">
                        <button class="action-btn view-btn" onclick="viewSurvey('market-research')">Preview</button>
                        <button class="action-btn edit-btn" onclick="editSurvey('market-research')">Edit</button>
                        <button class="action-btn delete-btn" onclick="deleteSurvey('market-research')">Delete</button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Account Section -->
        <section id="account" class="content-section">
            <h1>Account</h1>
            <div class="account-card">
                <div id="account-view" class="account-view">
                    <h2>Your Details</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>First Name</label>
                            <p>John</p>
                        </div>
                        <div class="info-item">
                            <label>Last Name</label>
                            <p>Doe</p>
                        </div>
                        <div class="info-item">
                            <label>Email</label>
                            <p>johndoe@example.com</p>
                        </div>
                        <div class="info-item">
                            <label>Phone Number</label>
                            <p>+233xxxxxxxxx</p>
                        </div>
                        <div class="info-item">
                            <label>Date of Birth</label>
                            <p>1990-11-05</p>
                        </div>
                        <div class="info-item">
                            <label>Gender</label>
                            <p>Male</p>
                        </div>
                    </div>
                    <button class="edit-btn" onclick="editAccount()">Edit Details</button>
                    <div class="security-settings">
                        <h2>Security</h2>
                        <div class="info-item">
                            <label>Password</label>
                            <button class="change-password-btn" onclick="changePassword()">Change Password</button>
                        </div>
                        <div class="info-item">
                            <label>Delete Account</label>
                            <button class="delete-btn" onclick="deleteAccount()">Delete Account</button>
                        </div>
                    </div>
                </div>
                <div id="account-edit" class="account-edit hidden">
                    <h2>Edit Details</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>First Name</label>
                            <input type="text" value="John">
                        </div>
                        <div class="info-item">
                            <label>Last Name</label>
                            <input type="text" value="Doe">
                        </div>
                        <div class="info-item">
                            <label>Email</label>
                            <input type="email" value="johndoe@example.com" disabled>
                            <button class="verify-btn" onclick="verifyEmail()">Verify</button>
                        </div>
                        <div class="info-item">
                            <label>Phone Number</label>
                            <input type="tel" value="+233xxxxxxxxx">
                        </div>
                        <div class="info-item">
                            <label>Date of Birth</label>
                            <input type="date" value="1990-11-05">
                        </div>
                        <div class="info-item">
                            <label>Gender</label>
                            <select>
                                <option value="male" selected>Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>
                    <button class="save-btn" onclick="saveAccount()">Save Changes</button>
                    <button class="cancel-btn" onclick="cancelEdit()">Cancel</button>
                </div>
            </div>
        </section>
    </div>

    <!-- Modal -->
    <div class="modal" id="modal">
        <div class="modal-content">
            <span class="modal-close" onclick="closeModal()">Ã—</span>
            <h2 id="modal-title"></h2>
            <p id="modal-message"></p>
            <div class="modal-actions">
                <button class="modal-btn confirm-btn" id="modal-confirm"></button>
                <button class="modal-btn cancel-btn" onclick="closeModal()">Cancel</button>
            </div>
        </div>
    </div>

    <!-- Toaster Container -->
    <div class="toaster-container" id="toaster-container"></div>

    <script src="~/js/dashboard.js"></script>
</body>
</html>